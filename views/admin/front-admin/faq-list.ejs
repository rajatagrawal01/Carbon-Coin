<%- include('header') -%>

  <div class="heading-row mb-20">
    <div class="row align-item-center">
       <div class="col-lg-6">
          <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i class="mdi mdi-comment-question-outline"></i></span> FAQ List </h3>
       </div>
       <div class="col-lg-6">
         <div class="text-right">
           <div>
             <a href="/add-new-question" class="btn btn-common bg-gradient-primary">Add new Questions</a>
           </div>
         </div>
       </div>
       <% if(err_msg!=undefined && err_msg !='' ){ %>
        <div class="alert alert-danger text-center  flash_msg " id="error_msg">
          <%= err_msg %>
           </div>
         
        <% }%>
         <% if(success_msg!=undefined && success_msg !='' ){ %>
          <!-- <div class="alert alert-success text-center  flash_msg "id="success_message">
          <%= success_msg %>
         </div> -->
        <% }%>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body table-responsive">
          <table class="table">
            
            <thead>
              <tr>
                <th width="10%">S. No.</th>
                <th width="30%">FAQ Question</th>
                <th width="30%">FAQ Answer</th>
                <th width="20%">Status</th>
                <th width="10%">Action</th>
              </tr>
            </thead>
            
            <tbody>
              <% var count =1%>
            <% questionDetails.forEach(function(row){%>
              <tr>
                <td><%=count %></td>
                <% count++%>
               
                <td><%=row.question%></td>
                <td><%=row.answer%></td>
                <td><%=row.status%></td>
                 <td>
                  <div class="edit-icons">
                   
                    <a href="/edit-faq" onclick="location.href=this.href+'?_id='+ `<%=row._id %>`;
                      return false" data-toggle="tooltip" data-placement="top" title="Edit"><i class="mdi mdi-pencil"></i></a>
                    <a href="/delete-faq" onclick="location.href=this.href+'?_id='+ `<%=row._id %>`;
                      return false" data-toggle="tooltip" data-placement="top" title="Delete"><i class="mdi mdi-close"></i></a>
              
                  </div>
                  </td>
              </tr>

               <%})%>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('footer') -%>

