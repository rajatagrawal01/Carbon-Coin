<%- include('firm-header') -%>

  <div class="page-header">
    <h3 class="page-title">
      <span class="page-title-icon bg-gradient-primary text-white mr-2">
        <i class="mdi mdi-account-edit"></i>
      </span>
      My Profile
    </h3>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-12 m-auto">
              <div>
                <form method="POST" action="/updateFirm" id="updateFirm">
                <div class="profile-form" >
                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Firm Name</label>
                        <input class="form-control" name="name" type="text" value=<%=user.firm_name%> >
                                               
                        <!-- <input type="text" class="form-control" placeholder=""> -->
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Firm's License</label>
                        <input type="text" name="licenece" class="form-control" placeholder="" value=<%=user.companys_licenece%> >
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Carbon Emmision Per/Year</label>
                        <input type="number" name="carbon_emission" class="form-control" placeholder="" value=<%=user.carbonEmission%>>
                      </div>
                    </div>
                  </div>

                  <!-- <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Available Area to Land Grow Trees</label>
                        <input type="text" class="form-control" placeholder="" />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Tree Plantation Capacity</label>
                        <input type="text" class="form-control" placeholder="" />
                      </div>
                    </div>
                  </div> -->
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Email Id</label>
                        <input class="form-control" type="email" name="email" placeholder="" readonly value=<%=user.email%> >
                        
                        <!-- <input type="text" class="form-control" placeholder=""> -->
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Phone No.</label>
                        <input class="form-control" name="mob" type="number" placeholder="" value=<%=user.mobile%> >
                        
                        <!-- <input type="text" class="form-control" placeholder=""> -->
                      </div>
                    </div>
                  </div>
                  <div class="popup-btn text-center">
                    <button type="submit" class="btn btn-common bg-gradient-primary">Save</button>

                    <!-- <a href="" class="btn btn-common bg-gradient-primary">Save</a> -->
                    <a href="" class="btn btn-common bg-gradient-primary">Cancel</a>
                  </div>
                </div>
              </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

